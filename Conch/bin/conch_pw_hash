#!/usr/bin/env perl

# Creates a hash suitable for changing user passwords in the database for.
#
# Generate a random hash:
# $ carton exec ./bin/conch_pw_hash $( pwgen -sy1 12 )

use strict;
use warnings;

use v5.20;
use feature qw(signatures);
no warnings qw(experimental::signatures);

use FindBin;
BEGIN { unshift @INC, "$FindBin::Bin/../lib" }

use Conch::Model::User;

say Conch::Model::User::_hash_password($ARGV[0]);

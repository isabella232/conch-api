{
  "$comment" : "NOTE: This file is for human reference ONLY. For programmatic use, use the GET '/json_schema/device_report/$schema_name' endpoints, or within conch itself, json-schema/device_report.yaml.",
  "$defs" : {
    "DeviceReport_v3_0_0" : {
      "description" : "the contents of a posted device report from relays and reporters",
      "properties" : {
        "bios_version" : {
          "type" : "string"
        },
        "cpus" : {
          "items" : {
            "type" : "object"
          },
          "type" : "array"
        },
        "device_type" : {
          "enum" : [
            "server",
            "switch"
          ],
          "type" : "string"
        },
        "dimms" : {
          "items" : {
            "properties" : {
              "memory-locator" : {
                "type" : "string"
              },
              "memory-serial-number" : {
                "oneOf" : [
                  {
                    "$ref" : "common.json#/$defs/non_empty_string"
                  },
                  {
                    "type" : "null"
                  }
                ]
              },
              "memory-size" : {
                "oneOf" : [
                  {
                    "$ref" : "#/$defs/int_or_stringy_int"
                  },
                  {
                    "type" : "null"
                  }
                ]
              }
            },
            "required" : [
              "memory-locator"
            ],
            "type" : "object"
          },
          "type" : "array",
          "uniqueItems" : true
        },
        "disks" : {
          "additionalProperties" : {
            "properties" : {
              "block_sz" : {
                "type" : "integer"
              },
              "drive_type" : {
                "type" : "string"
              },
              "enclosure" : {
                "$ref" : "#/$defs/int_or_stringy_int"
              },
              "firmware" : {
                "type" : "string"
              },
              "hba" : {
                "$ref" : "#/$defs/int_or_stringy_int"
              },
              "health" : {
                "type" : "string"
              },
              "model" : {
                "type" : "string"
              },
              "size" : {
                "type" : "integer"
              },
              "slot" : {
                "$ref" : "#/$defs/int_or_stringy_int"
              },
              "temp" : {
                "$ref" : "#/$defs/int_or_stringy_int"
              },
              "transport" : {
                "type" : "string"
              },
              "vendor" : {
                "type" : "string"
              }
            },
            "type" : "object"
          },
          "propertyNames" : {
            "$ref" : "common.json#/$defs/disk_serial_number"
          },
          "type" : "object"
        },
        "interfaces" : {
          "additionalProperties" : {
            "properties" : {
              "ipaddr" : {
                "oneOf" : [
                  {
                    "$ref" : "common.json#/$defs/ipaddr"
                  },
                  {
                    "type" : "null"
                  }
                ]
              },
              "mac" : {
                "$ref" : "common.json#/$defs/macaddr"
              },
              "mtu" : {
                "oneOf" : [
                  {
                    "$ref" : "#/$defs/int_or_stringy_int"
                  },
                  {
                    "type" : "null"
                  }
                ]
              },
              "peer_mac" : {
                "oneOf" : [
                  {
                    "$ref" : "common.json#/$defs/macaddr"
                  },
                  {
                    "type" : "null"
                  }
                ]
              },
              "product" : {
                "type" : "string"
              },
              "state" : {
                "oneOf" : [
                  {
                    "type" : "string"
                  },
                  {
                    "type" : "null"
                  }
                ]
              },
              "vendor" : {
                "type" : "string"
              }
            },
            "required" : [
              "mac",
              "product",
              "vendor"
            ],
            "type" : "object"
          },
          "propertyNames" : {
            "$ref" : "common.json#/$defs/device_interface_name"
          },
          "type" : "object"
        },
        "links" : {
          "allOf" : [
            {
              "$ref" : "common.json#/$defs/links"
            },
            {
              "minItems" : 1
            }
          ]
        },
        "os" : {
          "properties" : {
            "hostname" : {
              "type" : "string"
            }
          },
          "required" : [
            "hostname"
          ],
          "type" : "object"
        },
        "product_name" : {
          "type" : "string"
        },
        "relay" : {
          "properties" : {
            "serial" : {
              "$ref" : "common.json#/$defs/relay_serial_number"
            }
          },
          "required" : [
            "serial"
          ],
          "type" : "object"
        },
        "serial_number" : {
          "$ref" : "common.json#/$defs/device_serial_number"
        },
        "sku" : {
          "type" : "string"
        },
        "system_uuid" : {
          "$ref" : "common.json#/$defs/non_zero_uuid"
        },
        "temp" : {
          "properties" : {
            "cpu0" : {
              "$ref" : "#/$defs/int_or_stringy_int"
            },
            "cpu1" : {
              "$ref" : "#/$defs/int_or_stringy_int"
            },
            "exhaust" : {
              "$ref" : "#/$defs/int_or_stringy_int"
            },
            "inlet" : {
              "$ref" : "#/$defs/int_or_stringy_int"
            }
          },
          "required" : [
            "cpu0",
            "cpu1"
          ],
          "type" : "object"
        },
        "uptime_since" : {
          "type" : "string"
        }
      },
      "required" : [
        "bios_version",
        "product_name",
        "sku",
        "serial_number",
        "system_uuid"
      ],
      "type" : "object"
    },
    "int_or_stringy_int" : {
      "description" : "an integer that may be presented as a json string",
      "oneOf" : [
        {
          "type" : "integer"
        },
        {
          "pattern" : "^[0-9]+$",
          "type" : "string"
        }
      ]
    }
  },
  "$schema" : "http://json-schema.org/draft-07/schema#"
}
